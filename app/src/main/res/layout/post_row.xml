<?xml version="1.0" encoding="utf-8"?>
<!--Layout, fÃ¼r die Umfragen im MainFragment-->
<!-- jede Umfrage ist eine Cardview, die die entsprechenden Inhalte in einem RelativeLayout anzeigt, diese CardViews werden vom recyclerView des MainFragments verwaltet-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="40dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="60dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/voteButton"
            android:layout_below="@id/results"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"

            android:text="@string/vote" />

        <Button
            android:id="@+id/results"
            android:layout_below="@id/textinrow"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:layout_marginTop="12dp"
            android:text="@string/result" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"

            />


        <TextView
            android:id="@+id/textinrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="18dp"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>